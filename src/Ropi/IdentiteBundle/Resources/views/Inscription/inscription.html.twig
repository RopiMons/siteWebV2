{% extends "::base.html.twig" %}

{% block title %}Inscription {% endblock %}


{% block content %}
    <h1 class="soulignÃ©"> Inscription sur le site: </h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.dateNaissance) }}

    {% for contact in form.contacts %}
        {{ form_label(contact, contact.vars.value.typeContact.type) }}
        {{ form_errors(contact) }}
        {{ form_widget(contact) }}
    {% endfor %}
    <h3>Adresse</h3>
     {% for adresse in form.adresses %}  
        {{  form_row(adresse.rue) }}
         {{  form_row(adresse.numero) }}
          {{  form_row( adresse.complement) }}
           {{  form_row( adresse.typeAdresse) }}
            {{  form_row( adresse.ville) }}
           
        {{ form_errors(adresse) }}
        {% endfor %}
        <h3>Identifiant de connexion:</h3>
        {{form_row(form.identifiantWeb.username)}}
        {{form_row(form.identifiantWeb.motDePasse)}}
        
        {{form_row(form._token)}}
        {{form_row(form.Enregistrer)}}
            
   

{% endblock %}
